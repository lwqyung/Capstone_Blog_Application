<%- include("partials/header.ejs") %>

<% if ( locals.entry ) { %>
    <form action="/delete" method="post" id="delete-entry">
        <div class="container col-xxl-8 px-4 border-top">
            <div class="row flex-lg-row align-items-center g-5 py-5">
                <div class="col-lg-12 border border-danger">
                    <h2><%= entry.getTitle() %></h2>
                    <p><%= entry.entry %></p>
                </div>
                <div class="col-lg-12">
                    <h2 id="delete-confirm-msg">Are you sure you want to delete this entry?</h2>
                    <input type="hidden" value="<%= entry.getCreatedOnISO() %>" id="entryCreationDate" name="entryCreationDate" />
                    <input type="submit" class="btn btn-danger rounded-pill px-3" type="button" id="delete" value="Yes" >
                    <a href="/" class="btn btn-secondary rounded-pill px-3" type="button" id="cancel">No</a>
                </div>
            </div>
        </div>
    </form>
<% } %>

<%- include("partials/footer.ejs") %>