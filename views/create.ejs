<%- include("partials/header.ejs") %>


<form action="/create" method="post" id="create-entry">
    <div class="container col-xxl-8 px-4 border-top">
        <div class="row flex-lg-row align-items-center g-5 py-5">
            <div class="col-lg-12">
                <label for="name">Title of your story: </label>
                <input type="text" name="entryTitle" id="entryTitleInput" required />
            </div>
            <div class="col-lg-12 mt-3">
                <p><label for="story">Tell us your story:</label>
                <textarea id="story" name="story" rows="5" cols="80" form="create-entry"></textarea>
                </p>
            </div>
            <div class="col-lg-12 mt-3">
                <input type="submit" class="btn btn-primary rounded-pill px-3" type="button" id="create" value="Save new entry" >
                <a href="/" class="btn btn-secondary rounded-pill px-3" type="button" id="cancel">Cancel</a>
            </div>
        </div>
    </div>
</form>


